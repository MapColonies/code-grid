{
  "name": "@map-colonies/code-grid",
  "version": "0.1.0",
  "description": "utility library of a coded grid reference system",
  "main": "./dist/index.js",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/code-grid.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/code-grid/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/MapColonies/code-grid#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@map-colonies/eslint-config": "^3.1.3",
    "@map-colonies/prettier-config": "0.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^14.14.12",
    "commitlint": "^17.4.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.1.4",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^9.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^4.9.5"
  }
}
